<div class="container-lg">
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="m-0">Accueil de l'administration</h1>
        </div>
        <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item active">Administration</li>
            </ol>
        </div>
    </div>
    <div class="d-flex justify-content-between">
        <h4>Bonjour @User.FindFirst(claim => claim.Type == System.Security.Claims.ClaimTypes.Name).Value !</h4>
        <a asp-action="Logout" asp-controller="Connexion" class="btn btn-danger">Déconnexion</a>
    </div>
    <div class="card card-primary mt-4">
        <div class="card-header">
            <h3 class="card-title">Articles</h3>
        </div>
        <div class="card-body">
            <div class="d-flex align-content-start flex-wrap">
                <a asp-controller="Admin" asp-action="GestionArticles" class="btn btn-outline-primary">Gestion des articles</a>

                <a asp-controller="Admin" asp-action="CreerArticle" class="btn btn-outline-primary ml-2">Créer un article</a>

            </div>
        </div>
    </div>

    <div class="card card-success mt-4">
        <div class="card-header">
            <h3 class="card-title">Catégories</h3>
        </div>
        <div class="card-body">
            <div class="d-flex align-content-start flex-wrap">
                <a asp-controller="Admin" asp-action="GestionCategories" class="btn btn-outline-success">Gestion des catégories</a>
                <a asp-controller="Admin" asp-action="CreerCategorie" class="btn btn-outline-success ml-2">Créer une catégorie</a>

            </div>
        </div>
    </div>

    <div class="card card-danger mt-4">
        <div class="card-header">
            <h3 class="card-title">Administrateurs</h3>
        </div>
        <div class="card-body">
            <div class="d-flex align-content-start flex-wrap">
                <a asp-controller="Admin" asp-action="GestionAdmin" class="btn btn-outline-danger">Gestion des administrateurs</a>
                <a asp-controller="Admin" asp-action="CreerAdmin" class="btn btn-outline-danger ml-2">Créer un administrateur</a>

            </div>
        </div>
    </div>


   
</div>