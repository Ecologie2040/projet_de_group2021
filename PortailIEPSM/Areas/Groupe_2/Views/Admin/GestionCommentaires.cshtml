@model List<PortailIEPSM.Areas.Groupe_2.Models.Commentaire>
@section Styles {
    <link rel="stylesheet" href="~/themes/AdminLTE-3.0.5/plugins/sweetalert2/sweetalert2.css">
    <link rel="stylesheet" href="~/css/css_groupe2/styles.css">
}
<div class="container-lg">

    @if (Model.Count != 0)
    {
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Gestion des commentaires de l'article #@Model.First().Id_article</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Administration</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="GestionArticles">Gestion des articles</a></li>
                    <li class="breadcrumb-item active">Gestion des commentaires</li>
                </ol>
            </div>
        </div>
        <p>@Model.Count commentaires</p>
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>ID</th>
                    <th>Expéditeur</th>
                    <th>Commentaire</th>
                    <th>Action</th>
                </tr>

                @foreach (var commentaire in Model)
                {
                    <tr>
                        <td>@commentaire.Id</td>
                        <td style="max-width:250px; word-break: break-word;">
                            <p>@commentaire.Nom</p>
                            <p>@commentaire.Prenom</p>
                        </td>
                        <td class="td-comment" style="max-width:500px;">@commentaire.Reaction</td>
                        <td>
                            <a href="#" data-id="@commentaire.Id" class="btn bg-danger btn-flat margin delete_comment">Supprimer</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }
    else
    {
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Gestion des commentaires</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Index">Administration</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="GestionArticles">Gestion des articles</a></li>
                    <li class="breadcrumb-item active">Gestion des commentaires</li>
                </ol>
            </div>
        </div>
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h4><i class="icon fa fa-exclamation"></i> Information</h4>
            Aucun commentaire n'est associé à cet article
        </div>
    }
</div>
@section Scripts {
    <script src="~/themes/AdminLTE-3.0.5/plugins/sweetalert2/sweetalert2.all.js"></script>
    <script src="~/js/groupe2_js/scripts.js"></script>
}
